<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="sell"
            type="com.carbondev.tallynote.datamodel.Sell" />
<!--        <variable-->
<!--            name="detailViewModel"-->
<!--            type="com.carbondev.tallynote.view.viewmodel.DetailViewModel" />-->
<!--        <variable-->
<!--            name="date"-->
<!--            type="String" />-->
<!--        <variable-->
<!--            name="pay"-->
<!--            type="String" />-->
<!--        <variable-->
<!--            name="detail"-->
<!--            type="String" />-->
<!--        <variable-->
<!--            name="due"-->
<!--            type="String" />-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/top_left_radius_rose"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/note_clone"
            android:textColor="@color/darkText"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/stmType"
            app:layout_constraintTop_toBottomOf="@+id/textView45" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{sell.note}"
            android:textColor="@color/darkText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView29"
            app:layout_constraintTop_toTopOf="@+id/textView29"
            tools:text="This Is Note" />

        <TextView
            android:id="@+id/stmType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/payment_clone"
            android:textColor="@color/darkText"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/PaymentItemPayAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            numberEnOrBn="@{sell.payment}"
            android:textColor="@color/darkText"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/stmType"
            app:layout_constraintStart_toEndOf="@+id/stmType"
            app:layout_constraintTop_toTopOf="@+id/stmType"
            tools:text="0" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/darkText"
            android:textStyle="bold"
            app:beforeDueOrAdv="@{sell.beforeDue}"
            app:layout_constraintStart_toStartOf="@+id/stmType"
            app:layout_constraintTop_toBottomOf="@+id/stmType"
            tools:text="Before Total Due: 0" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/darkText"
            android:textStyle="bold"
            app:afterDueOrAdv="@{sell.afterDue}"
            app:layout_constraintStart_toStartOf="@+id/stmType"
            app:layout_constraintTop_toBottomOf="@+id/textView49"
            tools:text="After Total Due: 0" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/darkText"
            android:textSize="12sp"
            app:dateString="@{sell.date}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Date" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
